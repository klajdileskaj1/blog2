<div id="page-content">

      <h1 class="text-center mt-4"> Listing all categories</h1>
      <div class="flickr_pagination">

          <%= will_paginate @categories, :container => false %>
      </div>
      <div class="container mt-4">




            <% @categories.each do|category| %>
            <div class="row justify-content-center">
              <div class="col-4">

              <div class="card text-center mt-4 shadow  mb-5 bg-white rounded ">



                    <div class="card-header font-italic">

                    </div>
                    <div class="card-body">
                      <h5 class="card-title"><%=link_to category.name , category_path(category),class:"text-success" %></h5>

                      <p class="card-text"><%= truncate(category.name, length:100) %></p>
                        <p class="card-text"><%= pluralize(category.articles.count,"article") %></p>

                      <%= link_to "View" , category_path(category),class:"btn btn-outline-success"%>

                      <% if logged_in? && current_user.admin? %>

                      <%= link_to "Edit" , edit_category_path(category),class:"btn btn-outline-primary"%>

                      <%end%>


                    </div>
                    <div class="card-footer text-muted">
                      Created at <%= time_ago_in_words(category.created_at)%> ago,
                      Edited <%= time_ago_in_words(category.updated_at)%> ago
                    </div>
              </div>

          </div>
        </div>

        <%end%>
      </div>

      <div class="flickr_pagination mb-4">

          <%= will_paginate @categories, :container => false %>
      </div>
</div>
