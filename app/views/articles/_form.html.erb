

<div class="container">



      <div class="row justify-content-center">

        <div class="col-10">
              <%= render 'shared/errors', obj: @article %>
            <%= form_with  model: @article,class:"shadow p-3 mb-4 bg-success rounded" ,local:true do |f|%>
                <div class="from-group row mb-4">

                      <%= f.label:title ,class:"col-2 col-form-label text-white" %>

                      <div class="col-10">
                              <%= f.text_field:title,class:"form-control shadow rounded",placeholder:"Title of article"  %>
                        </div>
                  </div>

                    <div class="from-group row">
                      <%= f.label:description ,class:"col-2 col-form-label text-white" %>

                        <div class="col-10">
                            <%= f.text_area:description,rows:10,class:"form-control shadow rounded",placeholder:"Description of article"   %>
                        </div>
                    </div>

                    <div class="from-group row mt-4">
                      <%= f.label:category ,class:"col-2 col-form-label text-white" %>

                        <div class="col-10">
                            <%= f.collection_select(:category_ids, Category.all, :id, :name,
                            {:prompt => "Select from the list below(can be empty)"}, {:multiple => true,size:3,class:"custom-select shadow rounded"}) %>
                        </div>
                    </div>

              <div class="from-group row justify-content-center mt-4 ">
                <%= f.submit class:"btn btn-outline-light btn-lg"  %>
              </div>
        <% end %>

                <div class="from-group row justify-content-center mt-4">
                    <%= link_to 'Return to articles listing', articles_path,class:"text-info" , method: :get%>
                </div>
            </div>

      </div>
</div>
