<div id="page-content">

      <h1 class="text-center mt-4"> Alpha-Blogger's </h1>

      <div class="container mt-4">

        <div class="flickr_pagination">

            <%= will_paginate @articles, :container => false %>
        </div>



            <% @users.each do|user| %>
            <div class="row justify-content-center">
              <div class="col-6">

              <div class="card text-center mt-4 shadow  mb-5 bg-white rounded ">



                    <div class="card-header font-italic">
                      <%= link_to user.username,user_path(user) %>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title">
                        <%=link_to gravatar_for(user,size:150),user_path(user) %>
                      </h5>
                      <p class="card-text"><%= pluralize(user.articles.count,"article") %></p>


                        <%= link_to "View profile" , user_path(user),class:"btn btn-outline-success"%>
                        <% if logged_in? && user == current_user  %>

                        <%= link_to "Edit profile" , edit_user_path(user),class:"btn btn-outline-primary"%>

                        <% end %>

                        <% if logged_in? &&  current_user.admin? %>
                          <%= link_to "Delete profile" , user_path(user),method: :delete,class:"btn btn-outline-danger",data:{confirm:"Are you sure to delete account and articles association with this account ?"}%>
                        <% end %>



                    </div>
                    <div class="card-footer text-muted">
                      Joined <%= time_ago_in_words(user.created_at)%> ago

                    </div>
              </div>

          </div>
        </div>

        <% end %>

        <div class="flickr_pagination mb-4">

            <%= will_paginate @articles, :container => false %>
        </div>
      </div>


</div>
