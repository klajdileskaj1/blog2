<div id="page-content">

      <h1 class="text-center mt-4"> Sign in</h1>

      <div class="container">



            <div class="row justify-content-center">

              <div class="col-10">

                  <%= form_with  scope: :session,url:login_path,class:"shadow p-3 mb-4 bg-success rounded" ,local:true do |f|%>


                          <div class="from-group row">
                            <%= f.label:email ,class:"col-2 col-form-label text-white" %>

                              <div class="col-10">
                                  <%= f.email_field:email,class:"form-control shadow rounded mb-4",placeholder:"Enter email address"   %>
                              </div>
                          </div>

                          <div class="from-group row">
                            <%= f.label:password ,class:"col-2 col-form-label text-white" %>

                              <div class="col-10">
                                  <%= f.password_field:password,class:"form-control shadow rounded",placeholder:"Enter password"   %>
                              </div>
                          </div>

                    <div class="from-group row justify-content-center mt-4 ">
                      <%= f.submit"Sign in", class:"btn btn-outline-light btn-lg"  %>
                    </div>
              <% end %>

                      <div class="from-group row justify-content-center mt-4">
                          <%= link_to 'Return to articles listing', articles_path,class:"text-info" , method: :get%>
                      </div>
                  </div>

            </div>
      </div>




</div>
